{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rp-tauri",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "beforeDevCommand": "pnpm --filter rp-front dev",
    "beforeBuildCommand": "pnpm --filter rp-front build && pnpm --filter rp-front export",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../rp-front/out"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
